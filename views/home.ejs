<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        .card {
            height: 100%;
        }
        .card-img-top {
            height: 200px;
            object-fit:fill;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% blogs.forEach(function(blog) { %>
                <div class="col">
                    <div class="card">
                        <img src="<%= blog.coverImage %>" class="card-img-top" alt="Blog cover image">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read blog</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>

</html>